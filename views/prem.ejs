<%- include ("partials/header") %>

<section id="controls">
    <div class="container-fluid cf-controls">
        <div class="row">
            <h1>Dashboard</h1>
            <div class="col-md-4">
                <a href="/productsControl" role="button" class="btn btn-sm btn-warning">Products</a>
            </div>
            <div class="col-md-4">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Add New Product
                </button>
    
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add a new product</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="/newProduct" method="post" enctype="multipart/form-data">
                                <input type="text" class="form-control mb-3" name="code" id="code" placeholder="Code" value required>
                                <input type="text" class="form-control mb-3" name="prodName" id="prodName" placeholder="Name" value required>
                                <input type="text" class="form-control mb-3" name="prodContent" id="prodContent" placeholder="Content" value required>
                                <select class="form-select" name="prodType">
                                    <option selected>Select the Category</option>
                                    <option value="SOUND CRACKERS">SOUND CRACKERS</option>
                                    <option value="GROUND CRACKERS">GROUND CRACKERS</option>
                                    <option value="FLOWER POTS">FLOWER POTS</option>
                                    <option value="BIJILI CRACKERS">BIJILI CRACKERS</option>
                                    <option value="LITTLE CRACKERS">LITTLE CRACKERS</option>
                                    <option value="LIGHTING SERIES">LIGHTING SERIES</option>
                                    <option value="BOMBS">BOMBS</option>
                                    <option value="ROCKETS">ROCKETS</option>
                                    <option value="TWINKLING STARS">TWINKLING STARS</option>
                                    <option value="TIN FOUNTAIN">TIN FOUNTAIN</option>
                                    <option value="PAPER BOMB">PAPER BOMB</option>
                                    <option value="SHOWER CRACKERS">SHOWER CRACKERS</option>
                                    <option value="HANDLE CRACKERS">HANDLE CRACKERS</option>
                                    <option value="NEW NOVELTIES">NEW NOVELTIES</option>
                                    <option value="V SERIES">V SERIES</option>
                                    <option value="SPARKLERS">SPARKLERS</option>
                                    <option value="CHOTTA FANCY">CHOTTA FANCY</option>
                                    <option value="AERIAL FANCY">AERIAL FANCY</option>
                                    <option value="2 FANCY">2 FANCY</option>
                                    <option value="3 FANCY">3 FANCY</option>
                                    <option value="3½ FANCY">3½ FANCY</option>
                                    <option value="4 FANCY">4 FANCY</option>
                                    <option value="4 FANCY 2 PC">4 FANCY 2 PC</option>
                                    <option value="RESPECTING SHOTS">RESPECTING SHOTS</option>
                                    <option value="GIFT BOX">GIFT BOX</option>
                                  </select> <br>
                                <input type="number" class="form-control mb-3" name="prodActPrice" id="prodActPrice" placeholder="Actual Price" value required>
                                <input type="number" step=".01" class="form-control mb-3" name="prodDiscPrice" id="prodDiscPrice" placeholder="Discount Price" required value>
                                <!-- <input type="file" class="form-control mb-3" name="prodImage" id="prodImage" required > -->
                                <button type="submit" class="btn btn-sm btn-success">Add Product</button>
                            </form>
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        
                        </div>
                    </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <form action="/changeDiscount" method="post">
                    <input type="number" name="discValue" id="discValue" value>
                    <button href="/discountChange" type="submit" class="btn btn-sm btn-danger">Change Discount</>
                </form>
            </div>
        </div>
    </div>
</section>

<section id="productsList">
    <div class="container-fluid cf-productsList">
        <div class="row">
            <div class="col-md-12">
                <% if (products.length > 0) { %>
               
                  
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">Code</th>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">Content</th>
                            <th scope="col">Actual Price</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Availability</th>
                            <th scope="col">Update</th>
                            <th scope="col">Update Img</th>
                            <th scope="col">Delete</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                            <tr>
                            <td data-label="Code" class="mobile-display"><%= product.code %></td>
                            <td data-label="Name" class="mobile-display"><%= product.name %></td>
                            <td data-label="Type" class="mobile-hidden"><%= product.type %></td>
                            <td data-label="Content" class="mobile-hidden"><%= product.content %></td>
                            <td data-label="Actual Price"><h6 class="strike">&#8377;<%= product.actualPrice %></h6></td>
                            <td data-label="Amount" class="mobile-display">&#8377;<%= product.discountPrice %></td>      
                            <td>
                                <% if (product.availability) { %>
                                 <a href="/makeUnavailable/<%=product._id%>" role="button" class="btn btn-sm btn-danger">Make Unavailable?</a>
                                <% } else { %>
                                 <a href="/makeAvailable/<%=product._id%>" role="button" class="btn btn-sm btn-success">Available?</a> 
                                <% } %>
                            </td>
                            <!-- Update Product -->
                            <td>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal-<%=product._id%>">
                                    Update
                                </button>
  
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal-<%=product._id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Update <%=product.name%></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/update/<%=product._id%>" method="post">
                                                <input type="text" class="form-control input-group mb-3" name="code" id="code" value="<%=product.code%>"> <br>
                                                <input type="text" class="form-control input-group mb-3" name="newName" id="newName" value="<%=product.name%>"> <br>
                                                <select class="form-select" name="productType">
                                                    <option selected><%=product.type%></option>
                                                    <option value="SOUND CRACKERS">SOUND CRACKERS</option>
                                                    <option value="GROUND CRACKERS">GROUND CRACKERS</option>
                                                    <option value="FLOWER POTS">FLOWER POTS</option>
                                                    <option value="BIJILI CRACKERS">BIJILI CRACKERS</option>
                                                    <option value="LITTLE CRACKERS">LITTLE CRACKERS</option>
                                                    <option value="LIGHTING SERIES">LIGHTING SERIES</option>
                                                    <option value="BOMBS">BOMBS</option>
                                                    <option value="ROCKETS">ROCKETS</option>
                                                    <option value="TWINKLING STARS">TWINKLING STARS</option>
                                                    <option value="TIN FOUNTAIN">TIN FOUNTAIN</option>
                                                    <option value="PAPER BOMB">PAPER BOMB</option>
                                                    <option value="SHOWER CRACKERS">SHOWER CRACKERS</option>
                                                    <option value="HANDLE CRACKERS">HANDLE CRACKERS</option>
                                                    <option value="NEW NOVELTIES">NEW NOVELTIES</option>
                                                    <option value="V SERIES">V SERIES</option>
                                                    <option value="SPARKLERS">SPARKLERS</option>
                                                    <option value="CHOTTA FANCY">CHOTTA FANCY</option>
                                                    <option value="AERIAL FANCY">AERIAL FANCY</option>
                                                    <option value="2 FANCY">2 FANCY</option>
                                                    <option value="3 FANCY">3 FANCY</option>
                                                    <option value="3½ FANCY">3½ FANCY</option>
                                                    <option value="4 FANCY">4 FANCY</option>
                                                    <option value="4 FANCY 2 PC">4 FANCY 2 PC</option>
                                                    <option value="RESPECTING SHOTS">RESPECTING SHOTS</option>
                                                    <option value="GIFT BOX">GIFT BOX</option>
                                                  </select> <br>
                                                <input type="text" class="form-control input-group mb-3" name="newContent" id="newContent" value="<%=product.content%>"> <br>
                                                <input type="text" class="form-control input-group mb-3" name="newActualPrice" id="newActualPrice" value="<%=product.actualPrice%>"> <br>
                                                <input type="text" class="form-control input-group mb-3" name="newDiscountPrice" id="newDiscountPrice" value="<%=product.discountPrice%>"><br>
                                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </td>
                            <!-- Update Image -->
                            <td>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal1-<%=product._id%>">
                                    Update Image
                                </button>
  
                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal1-<%=product._id%>" tabindex="-1" aria-labelledby="exampleModalLabel1" aria-hidden="true">
                                    <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel1">Update Image of <%=product.name%></h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/updateImg/<%=product._id%>" method="post"  enctype="multipart/form-data">
                                                <input type="file" class="form-control form-control mb-3" name="prodImage" id="prodImage">
                                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a href="/deleteProduct/<%=product._id%>" type="button" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i></a>
                            </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                
                    
                <% } %>
            </div>
        </div>
    </div>
</section>









<%- include ("partials/footer") %>